    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "i": "^0.3.7",
    "install": "^0.13.0",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.7.2",
    "morgan": "^1.10.0",
    "nanoid": "^5.1.6",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.6",
    "paystack-api": "^2.0.6",
    "pdfkit": "^0.17.2",
    "process": "^0.11.10",
    "resend": "^6.4.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.10",
