    "@types/jsonwebtoken": "^9.0.10",
    "@types/luxon": "^3.7.1",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.4",
    "@types/nodemailer": "^7.0.2",
    "@types/pdfkit": "^0.17.3",
    "dotenv-cli": "^11.0.0",
    "multer": "^2.0.2",
    "prisma": "^6.16.3",
    "slugify": "^1.6.6",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
